    <UserControl.Resources>
        <ControlTemplate x:Key="DataErrorTemplate">
            <StackPanel>
                <!-- Placeholder for the TextBox itself -->
                <AdornedElementPlaceholder x:Name="textBox"/>
                <ItemsControl ItemsSource="{Binding}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" Foreground="Red"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ControlTemplate>

        <Grid  x:Key="StudentInformationView">
            <StackPanel Orientation ="Vertical">
                <TextBox Text = "{Binding Path = Id, Mode = TwoWay,
                                            ValidatesOnDataErrors=True,
                                            UpdateSourceTrigger=PropertyChanged,
                                            NotifyOnValidationError=True}"
                                Validation.ErrorTemplate="{StaticResource DataErrorTemplate}"
                    Width = "100" Margin = "10"/>


                <TextBox Text = "{Binding Path = Name, Mode = TwoWay,
                                            ValidatesOnDataErrors=True,
                                            UpdateSourceTrigger=PropertyChanged,
                                            NotifyOnValidationError=True}"
                            Validation.ErrorTemplate="{StaticResource DataErrorTemplate}"
                    Width = "100" Margin = "10"/>

                <TextBox Text = "{Binding Path = Age, Mode = TwoWay,
                                            ValidatesOnDataErrors=True,
                                            UpdateSourceTrigger=PropertyChanged,
                                            NotifyOnValidationError=True}" 
                                Validation.ErrorTemplate="{StaticResource DataErrorTemplate}"
                    Width = "100" Margin = "10"/>

                <TextBox Text = "{Binding Path = ClassId, Mode = TwoWay,
                                            ValidatesOnDataErrors=True,
                                            UpdateSourceTrigger=PropertyChanged,
                                            NotifyOnValidationError=True}" 
                                Validation.ErrorTemplate="{StaticResource DataErrorTemplate}"
                    Width = "100" Margin = "10"/>
            </StackPanel>
        </Grid>
    </UserControl.Resources>
    
    <Grid DataContext="{Binding CurrentStudent}">
        <TextBlock Text="Student"/>
        <ContentControl Content="{StaticResource StudentInformationView}"/>
    </Grid>


</UserControl>
